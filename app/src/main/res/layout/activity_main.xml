<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.compraencasa.MainActivity">

    <TextView
        android:id="@+id/txtVerCarroCompra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/common_padding"
        android:paddingBottom="@dimen/common_padding"
        android:text="@string/carro_compra"
        android:textColor="@color/blue"
        android:textSize="@dimen/small_header_text_size" />

    <TextView
        android:id="@+id/txtListaProductoTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtVerCarroCompra"
        android:background="@color/green"
        android:gravity="center"
        android:paddingTop="@dimen/common_padding"
        android:paddingBottom="@dimen/common_padding"
        android:text="@string/lista_producto"
        android:textAllCaps="true"
        android:textSize="@dimen/header_text_size"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lstProductos"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/txtListaProductoTitulo" />

</RelativeLayout>
